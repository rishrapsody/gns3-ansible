
router bgp {{ bgp['asn'] }}
  {% for neighors in bgp %}
    neighbor {{ neighbors.address }} remote-as {{ neighbors.remote_as }}
    neighbor {{ neighbors.address }} activate
    neighbor {{ neighbors.address }} source {{ bgp['source'] }}
  {% end for %}
